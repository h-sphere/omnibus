{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["es2022", "esnext.decorators", "esnext.disposable"],
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": ".",
    "incremental": true,
  },
  "include": ["src/"],
  "exclude": ["!src/"],
}
